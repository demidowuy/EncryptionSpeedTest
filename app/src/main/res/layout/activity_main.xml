<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.x_quantum.www.encryptionspeedtest.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/ec256"
        android:layout_width="257dp"
        android:layout_height="47dp"
        android:onClick="performEncryption"
        android:text="256 - EC"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rsa512"
        app:layout_constraintVertical_bias="0.944" />

    <Button

        android:id="@+id/rsa512"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:onClick="performEncryption"
        android:text="512 - RSA"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rsa1024" />

    <Button
        android:id="@+id/rsa1024"
        android:layout_width="252dp"
        android:layout_height="46dp"
        android:onClick="performEncryption"
        android:text="1024 - RSA"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rsa2048"
        android:layout_marginBottom="53dp" />

    <Button
        android:id="@+id/rsa2048"
        android:layout_height="45dp"
        android:onClick="performEncryption"
        android:text="2048 - RSA"
        android:visibility="visible"
        android:layout_width="254dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="168dp" />

</android.support.constraint.ConstraintLayout>
